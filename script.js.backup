function handleSubmit(event) {
    event.preventDefault();
    
    const formData = new FormData(event.target);
    const newName = {
        id: Date.now(), // Simple ID generation
        name: formData.get('name'),
        meaning: formData.get('meaning'),
        reference: formData.get('reference') || '',
        gender: formData.get('gender'),
        category: formData.get('category'),
        votes: 0,
        contributor: formData.get('contributor') || 'роЕроиро╛роородрпЗроп',
        status: 'pending',
        approved: false
    };
    
    // Validate required fields
    if (!newName.name || !newName.meaning || !newName.gender || !newName.category) {
        showMessage('родрпЗро╡рпИропро╛рой роЕройрпИродрпНродрпБ рокрпБро▓роЩрпНроХро│рпИропрпБроорпН рокрпВро░рпНродрпНродро┐ роЪрпЖропрпНропро╡рпБроорпН', 'error');
        return;
    }
    
    // Add to database
    namesDatabase.push(newName);
    
    // Show success message
    showMessage('роЙроЩрпНроХро│рпН рокрпЖропро░рпН ро╡рпЖро▒рпНро▒ро┐роХро░рооро╛роХ роЪрпЗро░рпНроХрпНроХрокрпНрокроЯрпНроЯродрпБ! роЪроорпВроХроорпН роЗрокрпНрокрпЛродрпБ роЗродрпИ роородро┐рокрпНрокрпАроЯрпБ роЪрпЖропрпНропро▓ро╛роорпН.', 'success');
    
    // Reset form
    event.target.reset();
    
    // Update stats
    updateStats();
}

function showMessage(text, type) {
    const existingMessage = document.querySelector('.message');
    if (existingMessage) {
        existingMessage.remove();
    }
    
    const message = document.createElement('div');
    message.className = `message message-${type}`;
    message.textContent = text;
    
    const form = document.getElementById('submitForm');
    if (form) {
        form.insertBefore(message, form.firstChild);
        
        // Auto-remove after 5 seconds
        setTimeout(() => {
            message.remove();
        }, 5000);
    }
}

